export TP='-tp=px'

# pyfortool
source  /home/sila/miniforge3/etc/profile.d/conda.sh
conda activate /home/escj/miniconda3/envs/py39_pyfortool_011225

# For python graphic 
#conda activate mnh-env_nuwa
